# zstyle ':fzf-tab:complete:cat:*' fzf-preview 'zsh -c "if [ -d $realpath ]; then ls --color $realpath -a; fi; if [ -f $realpath ]; then bat --color=always --style=header,grid --line-range :300 $realpath; fi"'
